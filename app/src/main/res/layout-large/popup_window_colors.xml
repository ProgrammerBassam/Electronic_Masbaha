<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.bassambadr.electronicmasbaha.widgets.CustomeTextView
        widget:zrnic="zrnic.ttf"
        android:id="@+id/close_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/logo_text_padding"
        android:textColor="@color/background_color"
        android:background="@color/backgroundd_color_4"
        android:text="@string/change_bg_close"
        android:layout_gravity="left|top"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/top_ll"
        android:background="@drawable/settings_item_layout_bg"
        android:padding="10dp"
        android:layout_below="@+id/close_tv">

        <TextView
            android:layout_width="@dimen/texeview_size"
            android:layout_height="@dimen/texeview_size"
            android:id="@+id/first_bg_color"
            android:background="@color/backgroundd_color_1"/>

        <TextView
            android:layout_width="@dimen/texeview_size"
            android:layout_height="@dimen/texeview_size"
            android:id="@+id/second_bg_color"
            android:background="@color/backgroundd_color_2"/>

        <TextView
            android:layout_width="@dimen/texeview_size"
            android:layout_height="@dimen/texeview_size"
            android:id="@+id/orginal_bg_color"
            android:background="@color/background_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/settings_item_layout_bg"
        android:padding="10dp">

        <TextView
            android:layout_width="@dimen/texeview_size"
            android:layout_height="@dimen/texeview_size"
            android:id="@+id/third_bg_color"
            android:background="@color/backgroundd_color_3"/>

        <TextView
            android:layout_width="@dimen/texeview_size"
            android:layout_height="@dimen/texeview_size"
            android:id="@+id/forth_bg_color"
            android:background="@color/backgroundd_color_4"/>

        <TextView
            android:layout_width="@dimen/texeview_size"
            android:layout_height="@dimen/texeview_size"
            android:id="@+id/fifth_bg_color"
            android:background="@color/backgroundd_color_5" />

    </LinearLayout>

</LinearLayout>