        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <com.bassambadr.electronicmasbaha.widgets.CustomeTextView
                widget:DroidSansArabic="DroidSansArabic.ttf"
                android:id="@+id/vibrate_settings_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/logo_text_padding"
                android:textColor="@color/background_color"
                android:background="@color/tv_background_color"
                android:text="@string/vibration_settings_string"
                android:layout_gravity="right" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_layout_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <com.bassambadr.electronicmasbaha.widgets.CustomeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    widget:DroidSansArabic="DroidSansArabic.ttf"
                    android:text="@string/vibration_settings_active_vibrate_string"
                    android:textColor="@color/tv_background_color"
                    android:padding="@dimen/logo_text_padding"
                    android:background="#ebebeb"
                    android:id="@+id/view3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

                <com.rey.material.widget.Switch
                    android:id="@+id/active_vibrate_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:checked="false"
                    android:padding="16dp"
                    android:background="@drawable/settings_item_layout_bg"
                    app:sw_thumbColor="@color/tv_background_color"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_layout_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <com.bassambadr.electronicmasbaha.widgets.CustomeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    widget:DroidSansArabic="DroidSansArabic.ttf"
                    android:text="@string/vibration_settings_active_vibrate_end_string"
                    android:textColor="@color/tv_background_color"
                    android:padding="@dimen/logo_text_padding"
                    android:background="#ebebeb"
                    android:id="@+id/view4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />

                <com.rey.material.widget.Switch
                    android:id="@+id/active_long_vibrate_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:checked="false"
                    android:padding="16dp"
                    android:background="@drawable/settings_item_layout_bg"
                    app:sw_thumbColor="@color/tv_background_color"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
