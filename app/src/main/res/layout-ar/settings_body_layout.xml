            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/share_rl"
                android:orientation="horizontal"
                android:background="@drawable/settings_layout_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <com.bassambadr.electronicmasbaha.widgets.CustomeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    widget:DroidSansArabic="DroidSansArabic.ttf"
                    android:text="@string/app_settings_share_string"
                    android:textColor="@color/tv_background_color"
                    android:padding="@dimen/logo_text_padding"
                    android:background="@drawable/settings_item_layout_bg"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>



